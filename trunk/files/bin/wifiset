#!/bin/sh


pid=`ps | grep airkiss |grep -v "grep" | awk '{print $1}'`

echo "$pid" > /dev/console

device=$1
echo "$device" > /dev/console

if [ -n "$pid" ];then
	kill -9 $pid
	
	cp -r /etc/config/wireless.ap-only /etc/config/wireless
	
	echo 1 > /sys/class/leds/wr8305rt\:sys/brightness
	
	wifi
	
	sleep 1

else
	if [ -z "$device" ];then
		echo "$device faile"
	else
		config=`uci get gateway.airkiss.config`
		
		if [ "$config"x == "false"x ];then
			echo "start airkiss" > /dev/console
			/bin/airkiss $device > /dev/console &
		else
			echo "wireless is config" > /dev/console 
		fi
	fi
fi
